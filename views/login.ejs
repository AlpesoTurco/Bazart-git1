<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css">
  <link rel="icon" href="resources/img/logo-icon.png" type="image/x-icon">
  <title>Bazart-Login</title>
  <link href="resources/recursos/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet">
  <link href="resources/recursos/css/sb-admin-2.min.css" rel="stylesheet">

</head>
<body class="bg-gradient-primary">

  <div class="container">

      <!-- Outer Row -->
      <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">
          <div class="card o-hidden border-0 shadow-lg my-5 rounded-lg">
              <div class="card-body p-0">
                  <!-- Nested Row within Card Body -->
                  <div class="row">
                      <div class="col-lg-6 d-none d-lg-block bg-login-image">
                          <img class="img-fluid rounded-lg h-100" src="resources/img/compras-login2.png" alt="Foto de un carrito sobre un celular">
                      </div>
                      <div class="col-lg-6">
                          <div class="p-5">
                              <div class="text-center">
                                  <h1 class="h4 text-gray-900 mb-4">Bienvenido!</h1>
                              </div>
                                <form class="user" id="loginForm" action="/loginauth" method="post">
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user rounded-lg" id="exampleInputEmail" name="email" aria-describedby="emailHelp" placeholder="Ingrese Su Usuario...">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control-user rounded-lg" id="exampleInputPassword" name="password" placeholder="Contraseña">
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                            <input type="checkbox" class="custom-control-input" id="customCheck">
                                            <label class="custom-control-label" for="customCheck">Recordar</label>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block rounded-lg py-2 px-4 mt-4">
                                        Login
                                    </button>
                                    <hr>
                                </form>                            
                              <div class="text-center mt-3">
                                  <a class="small" href="forgot-password.html">¿Olvidó su contraseña?</a>
                              </div>
                              <div class="text-center">
                                  <a class="small" href="/registro">¡Crear una cuenta!</a>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
      

  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="resources/recursos/vendor/jquery/jquery.min.js"></script>
  <script src="resources/recursos/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="resources/recursos/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="resources/recursos/js/sb-admin-2.min.js"></script>

  <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <%if (typeof alert != "undefined") { %>
        
        <script>
            console.log("No funciona")
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: '<% showConfirmButton %>', 
                timer: '<%= timer %>' 
            }).then(() => {
                window.location = '/<%= ruta %>';
            });
        </script>
    <% } %>
</body>
</html>